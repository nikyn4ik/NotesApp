<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesApp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2010"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="av" x:Class="NotesApp.Files"
        ResizeMode="NoResize"
        Icon="\Images\icon.ico"
        WindowStartupLocation="CenterScreen"
        Title="Notes" Height="400" Width="600">

    <Window.Background>

        <ImageBrush ImageSource="\Images\1.jpg" />

    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Label Content="Files"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Background="#FFFFFF"
               FontFamily="Microsoft JhengHei UI Light"
               FontSize="40"
               Foreground="Black" 
               FontWeight="Bold" Height="58" VerticalAlignment="Top" />
        <ListView x:Name="list"  Margin="0,63,0,0" Grid.RowSpan="2" Foreground="Black" FontFamily="Times New Roman" FontSize="14" SelectionChanged="list_SelectionChanged" av:ItemsSource="{av:SampleData ItemCount=5}">
        </ListView>
    </Grid>
</Window>
